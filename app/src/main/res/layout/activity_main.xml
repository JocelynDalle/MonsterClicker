<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="hb.com.energyclicker.MainActivity">

    <include layout="@layout/energy_dashboard" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:onClick="tap"
        android:src="@drawable/pok" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/training_dashboard" />

            <include layout="@layout/hunt_dashboard"/>

            <include layout="@layout/shop_dashboard" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>
